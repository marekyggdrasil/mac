{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["dom", "esnext"],
    "module": "es2022",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node"
  },
  "include": ["./src"],
  "exclude": ["./src/**/*.test.ts"]
}
